---

interface Props {
    title: string;
    day: string;
    img: string;
}

const {
    title,
    day,
    img,
}: Props = Astro.props;

---

<div class="activity item red">
    <div class="header">
        <h3>{title}</h3>
        <span class="day">{day}</span>
    </div>

    <div class="image">
        <img src=`/images/activities/${img}` />
    </div>
    <p>
        <slot />
    </p>
</div>

<style lang="scss">
    @use '../../styles/variables.scss';

    .activity {
        border-radius: 0.25em;
        box-sizing: border-box;

        .header {
            display: flex;
            direction: row;
            justify-content: space-between;
            align-items: center;

            h3 {
                margin: 0;
            }

            .day {
                font-size: variables.$font-size-sm;
                font-weight: 500;
                background: var(--color-two);
                color: white;
                padding: 0.5em 0.5em;
                top: 0;
                right: 0;
                border-radius: 0.5em;
                min-width: 9em;

                display: flex;
                align-items: center;
                justify-content: center;
            }
        }

        .image {
            margin-top: 1em;
            aspect-ratio: 16/9;
            height: auto;
            vertical-align: middle;
            width: 100%;

            img {
              background: variables.$color-yellow-400;
              border-radius: 0.5em;

              width: 100%;
              height: 100%;

              object-fit: fill;
            }
        }
    }
</style>
