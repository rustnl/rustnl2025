---
import Schedule from "./Schedule.astro";
import ScheduleDay from "./ScheduleDay.astro";
import ScheduleSection from "./ScheduleSection.astro";
import ScheduleItem from "./ScheduleItem.astro";
import OrganizeOwnActivity from "./OrganizeOwnActivity.astro";

import { library, icon } from "@fortawesome/fontawesome-svg-core";
import { faInfoCircle, faClock } from "@fortawesome/free-solid-svg-icons";

library.add(faInfoCircle, faClock);
const clockIcon = icon({ prefix: "fas", iconName: faClock.iconName });
const infoIcon = icon({ prefix: "fas", iconName: faInfoCircle.iconName });
---

<Schedule logo>
    <ScheduleDay>
        <ScheduleSection>
            <span slot="location">Utrecht,&nbsp;NL</span>

            <ScheduleItem>
                <span slot="header">Social activities</span>
                <span class="attendees" slot="attendees">in small groups</span>
                <span class="time" slot="time">12:00–22:00</span>
                <Fragment slot="activities">
                    <p>City tour</p>
                    <p>Ferris sticker hunt</p>
                    <p>Bouldering</p>
                    <p>Bowling</p>
                    <p>Laser tag</p>
                    <p>Museum visit</p>
                    <p>…</p>
                    <!-- <OrganizeOwnActivity /> -->
                </Fragment>
            </ScheduleItem>
        </ScheduleSection>
    </ScheduleDay>
    <ScheduleDay>
        <ScheduleSection>
            <span slot="location">Kinepolis Jaarbeurs, Utrecht,&nbsp;NL</span>

            <ScheduleItem>
                <span slot="header">Conference day 1</span>
                <span class="attendees" slot="attendees">800 attendees</span>
                <span class="time" slot="time">08:45–19:00</span>
                <Fragment slot="activities">
                    <p>3 tracks / 20+ talks</p>
                    <p>
                        <a class="more" href="/schedule/tuesday"><Fragment set:html={clockIcon.html} /> Schedule</a>
                        <a class="more" href="/overview/#conf-day1"><Fragment set:html={infoIcon.html} /> More info</a>
                    </p>
                </Fragment>
            </ScheduleItem>
        </ScheduleSection>
        <ScheduleSection>
            <ScheduleItem>
                <span slot="header">Social activities</span>
                <span class="time" slot="time">18:00–22:00</span>
                <Fragment slot="activities">
                    <p>To be announced</p>
                    <OrganizeOwnActivity />
                </Fragment>
            </ScheduleItem>
        </ScheduleSection>
    </ScheduleDay>
    <ScheduleDay>
        <ScheduleSection>
            <span slot="location">Kinepolis Jaarbeurs, Utrecht,&nbsp;NL</span>

            <ScheduleItem>
                <span slot="header">Conference day 2</span>
                <span class="attendees" slot="attendees">800 attendees</span>
                <span class="time" slot="time">08:45–19:00</span>
                <Fragment slot="activities">
                    <p>Main stage</p>
                    <p>Deep Dive track</p>
                    <p>Rust Project track</p>
                    <p style="margin-top: auto;"><a href="/schedule/wednesday">Talk schedule</a></p>
                </Fragment>
            </ScheduleItem>
            <ScheduleItem>
                <span slot="header">Social activities</span>
                <span class="time" slot="time">18:00–22:00</span>
                <Fragment slot="activities">
                    <p>To be announced</p>
                    <OrganizeOwnActivity />
                </Fragment>
            </ScheduleItem>
        </ScheduleSection>
    </ScheduleDay>

    <ScheduleDay>
        <ScheduleSection>
            <span slot="location">DUS, Sophialaan&nbsp;1, Utrecht,&nbsp;NL</span>

            <ScheduleItem>
                <span slot="header">Workshops</span>
                <span class="attendees" slot="attendees">100 attendees</span>
                <span class="time" slot="time">09:00–13:00</span>
                <Fragment slot="activities">
                    <p>7 workshops in total</p>
                    <br />
                    <p><a href="/workshops">See details</a></p>
                </Fragment>
            </ScheduleItem>
            <ScheduleItem align_end>
                <span slot="header">10 Years of Rust Celebration</span>
                <span class="attendees" slot="attendees">400 attendees</span>
                <span class="time" slot="time">16:00–20:00</span>
                <Fragment slot="activities">
                    <p>Live release of Rust&nbsp;1.87!</p>
                </Fragment>
            </ScheduleItem>
        </ScheduleSection>
    </ScheduleDay>

    <ScheduleDay>
        <ScheduleSection>
            <span slot="location">TBD, Utrecht, NL</span>

            <ScheduleItem>
                <span slot="header">Hackathon</span>
                <span class="attendees" slot="attendees">200 attendees</span>
                <span class="time" slot="time">09:00–18:00</span>
                <Fragment slot="activities">
                    <p>Collaborative coding</p>
                    <p>Promote your own project!</p>
                </Fragment>
            </ScheduleItem>
        </ScheduleSection>
        <ScheduleSection>
            <span slot="location">DUS, Sophialaan&nbsp;1, Utrecht,&nbsp;NL</span>

            <ScheduleItem>
                <span slot="header">Rust All-Hands & Unconference</span>
                <span class="attendees" slot="attendees">200 attendees</span>
                <span class="time" slot="time">09:00–18:00</span>
                <Fragment slot="activities">
                    <p>Invitation only</p>
                </Fragment>
            </ScheduleItem>
        </ScheduleSection>
    </ScheduleDay>

    <ScheduleDay>
        <ScheduleSection>
            <span slot="location">Utrecht,&nbsp;NL</span>

            <ScheduleItem>
                <span slot="header">Social activities</span>
                <span class="attendees" slot="attendees">in small groups</span>
                <span class="time" slot="time">09:00–22:00</span>
                <Fragment slot="activities">
                    <p>To be announced</p>
                    <OrganizeOwnActivity />
                </Fragment>
            </ScheduleItem>
        </ScheduleSection>
        <ScheduleSection>
            <span slot="location">DUS, Sophialaan&nbsp;1, Utrecht,&nbsp;NL</span>

            <ScheduleItem>
                <span slot="header">Rust All-Hands & Unconference</span>
                <span class="attendees" slot="attendees">200 attendees</span>
                <span class="time" slot="time">09:00–18:00</span>
                <Fragment slot="activities">
                    <p>Invitation only</p>
                </Fragment>
            </ScheduleItem>
        </ScheduleSection>
    </ScheduleDay>

    <div slot="extra">
        Do you have any suggestions for fun social activities with other Rustaceans?
        Let us know by filling out <a href="https://forms.gle/fKocgjB4x4TejQYV9">this form</a >.
    </div>
</Schedule>

<style lang="scss">
@use "../../styles/variables.scss";

.align-end {
    margin-top: auto !important;
}

.more {
    color: variables.$color-black;
    display: block;
    padding: 0.3rem;
    // text-decoration: none;
}

.attendees {
    display: none;
}

.time {
    display: block;
    padding-bottom: 1rem;
    font-size: smaller;
    color: variables.$color-black;
}
</style>
