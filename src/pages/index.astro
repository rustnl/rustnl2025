---
import HomeLayout from "../layouts/HomeLayout.astro";

import Person from "../components/people/Person.astro";
import Sponsor from "../components/sponsor/sponsor.astro";
import SponsorTier from "../components/sponsor/sponsor-tier.astro";

import Button from "../components/Button.astro";
import ButtonGroup from "../components/ButtonGroup.astro";
import { useTalks } from "../components/useTalks";


const talks = await Astro.glob('./talks/*.md');
const {alice, julius, pietro, alex, niko, miguel} = useTalks(talks);
const featured_talks = [alice, julius, pietro, alex, niko, miguel];
---

<HomeLayout>
    <div slot="explainer">
        <h1 id="explainer">RustWeek 2025</h1>
        <p>
            RustNL is back in 2025 with a new name: RustWeek!
            <br />and—you've guessed it—a full week of Rust!
            <br />
        </p>
        <p>
            Date: <strong>May 13–17, 2025</strong><br />
            Location: <strong>Utrecht, the Netherlands</strong>
        </p>
        <p>
            The conference includes two days of talks, one day of workshops,
            sponsor and interaction space to talk and connect, and social
            activities all-week.
        </p>
        <p>
            Additionally, we're hosting Rust's 10th birthday celebration, an unconference
            for maintainers, and the first official Rust All Hands since 2019!
        </p>
    </div>

    <div slot="cfp">
        <h2 id="cfp">Call for Proposals</h2>
        <p>
            Our CFP has closed on Jan 19, 2025 23:59 CET.
        </p>
    </div>

    <div slot="where">
        <h2>Location: Utrecht</h2>
        <p>
            RustWeek 2025 will take place in Utrecht, one of the largest and
            most beautiful cities of the Netherlands. Utrecht is known for its
            medieval city centre and lovely canals, and has excellent public
            transport and walkability.
        </p>
        <p>
            Utrecht's train station is the biggest and most central train
            station in the country, making it the central hub for trains
            in the Netherlands.
            Many international trains stop here as well, so the conference will be
            easy to reach by train.
        </p>
        <p>
            If you have to come by airplane, a 24/7 <a
                href="https://www.ns.nl/en/journeyplanner/#/?vertrek=Schiphol Airport&aankomst=Utrecht Centraal"
                >train connection</a
            >
            from Amsterdam Schiphol Airport (AMS) takes you directly to Utrecht in
            just half an hour. (No need to buy a ticket; just check in and out with
            your bank card, credit card, or phone.)
        </p>
        <p>
            The two conference days will take place at Kinepolis Jaarbeurs
            Utrecht, just a few minutes walk from the Utrecht Centraal train
            station.
        </p>
        <p>
            The workshops, all-hands, and unconference will take place at De
            Utrechtse Stadsvrijheid, for which transport from the city centre
            will be provided.
        </p>
    </div>

    <Fragment slot="sponsors">
        <p>
            Interested in sponsoring? Download our <a
                target="_blank"
                href="/resources/sponsorship-prospectus-rustweek-2025.pdf"
                >Sponsorship prospectus</a
            > or <a href="mailto:sponsors@rustnl.org">contact us</a>
        </p>
        <SponsorTier name="Diamond sponsors">
            <Sponsor
                name="JetBrains"
                tier="diamond"
                image="jetbrains.png"
                link="https://www.jetbrains.com/"
            />
        </SponsorTier>
        <SponsorTier name="Gold sponsors">
            <Sponsor
                name="Zed"
                tier="gold"
                image="zed.svg"
                link="https://zed.dev/"
            />
        </SponsorTier>
        <SponsorTier name="Ecosystem partners">
            <Sponsor
                name="GOSIM Rust Spotlight"
                tier="ecosystem-partner"
                image="gosim.svg"
                link="https://spotlight.gosim.org/rust2025"
            />
            <Sponsor
                name="Google"
                tier="ecosystem-partner"
                image="google.png"
                link="https://google.com/"
            />
            <Sponsor
                name="Rust Foundation"
                tier="ecosystem-partner"
                image="rustfoundation.png"
                link="https://foundation.rust-lang.org/"
            />
            <Sponsor
                name="Futurewei"
                tier="ecosystem-partner"
                image="futurewei.png"
                link="https://futurewei.com/"
            />      
        </SponsorTier>
        <SponsorTier name="Silver sponsors">
            <Sponsor
                name="Arm"
                tier="silver"
                image="arm-blue.png"
                link="https://www.arm.com/"
            />
            <Sponsor
                name="Infineon"
                tier="silver"
                image="infineon.png"
                link="https://www.infineon.com/"
            />
        </SponsorTier>
        <SponsorTier name="Bronze sponsors">
            <Sponsor
                name="Espressif"
                tier="bronze"
                image="unconf/espressif.svg"
                link="https://espressif.com/"
            />
            <Sponsor
                name="TandemDrive"
                tier="bronze"
                image="tandemdrive.png"
                link="https://tandemdrive.com/"
            />
        </SponsorTier>
        <SponsorTier name="Supporters">
            <Sponsor
                name="ROCSYS"
                tier="supporter"
                image="rocsys2025.png"
                link="https://rocsys.com"
            />
            <Sponsor
                name="NLnet Labs"
                tier="supporter"
                image="nlnetlabs.png"
                link="https://nlnetlabs.nl"
            />
        </SponsorTier>
        <SponsorTier name="Workshop partners">
            <Sponsor
                name="GiGa infosystem GmbH"
                tier="supporter"
                image="giga-systems.svg"
                link="https://giga-infosystems.com/"
            />
            <Sponsor
                name="Makepad"
                tier="supporter"
                image="makepad.png"
                link="https://makepad.dev/"
            />
            <Sponsor
                name="Slint"
                tier="supporter"
                image="slint.png"
                link="https://slint.dev/"
            />
            <!-- <Sponsor
                name="Corrode"
                tier="supporter"
                image="corrode.?"
                link="https://corrode.dev"
            /> -->
        </SponsorTier>
        <SponsorTier name="Organizing partners">
            <Sponsor
                name="Tweede golf"
                tier="organizing-partner"
                image="tweede-golf-v2.png"
                link="https://tweedegolf.nl"
            />
            <Sponsor
                name="Hexcat"
                tier="organizing-partner"
                image="hexcat.png"
                link="https://hexcat.nl"
            />
        </SponsorTier>
    </Fragment>
    <div slot="about">
        <h2 id="about">About RustWeek</h2>
        <p>
            RustWeek is organised by Stichting Rust Nederland, RustNL for short,
            a non-profit that strives to promote the implementation of the Rust
            programming language.
        </p>
        <ButtonGroup>
            <Button link="/about">More About Us</Button>
        </ButtonGroup>
    </div>
    <Fragment slot="speakers">
        {featured_talks.map((talk) => (
            <Person tile link={talk.slug} tracks={talk.tracks} {...talk.speakers[0]} />
        ))}
    </Fragment>
</HomeLayout>
